{
  "manifest_version": 3,
  "name": "AI Message Refiner",
  "version": "2.0.0",
  "description": "Refine your messages with AI on WhatsApp Web, Facebook Chat & Messenger. Powered by Groq.",
  "permissions": ["storage"],
  "host_permissions": ["https://api.groq.com/*"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*",
        "https://www.facebook.com/*",
        "https://www.messenger.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
