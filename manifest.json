{
  "manifest_version": 3,
  "name": "AI Message Refiner",
  "version": "3.0.0",
  "description": "Refine your messages with AI on WhatsApp Web, Facebook Chat & Messenger. Supports Groq, Gemini, OpenAI, OpenRouter & more.",
  "permissions": ["storage", "clipboardRead", "clipboardWrite"],
  "host_permissions": [
    "https://api.groq.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*",
    "https://openrouter.ai/*",
    "https://api.mistral.ai/*",
    "https://api.anthropic.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*",
        "https://www.facebook.com/*",
        "https://www.messenger.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
